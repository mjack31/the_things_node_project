<% include ./partials/header %>

  <div class="container mt-3">
    <div class="mx-auto formDiv">
      <h3>Login form</h3>
      <form class="mb-4" action="/login" method="POST">
        <div class="form group mb-3">
          <label for="username">Login:</label>
          <input type="text" class="form-control" id="username" name="username" placeholder=""></input>
        </div>
        <div class="form group mb-5">
          <label for="password">Password:</label>
          <input type="password" class="form-control" id="password" name="password" placeholder=""></input>
        </div>
        <button type="submit" class="btn btn-outline-primary w-100">Login!</button>
      </form>
      <a href="/things">Go back</a>
    </div>
  </div>

<% include ./partials/footer %>