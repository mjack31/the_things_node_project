<% include ../partials/header %>

<div class="container mt-3">
    <div class="mx-auto formDiv">
        <form class="mb-4" action="/things/<%= foundThing._id %>?_method=PUT" method="POST">
            <div class="form group mb-4">
                <label for="ThingName">Thing name:</label>
                <input type="text" class="form-control" id="ThingName" name="Thing[name]" value="<%= foundThing.name %>"></input>           
            </div>
            <div class="form group mb-4">
                <label for="ThingImage">Thing image:</label>
                <input type="text" class="form-control" id="ThingImage" name="Thing[image]" value="<%= foundThing.image %>"></input> 
            </div>
            <div class="form group mb-4">
                <label for="ThingDescription">Description:</label>
                <textarea class="form-control" id="ThingDescription" name="Thing[description]" rows="6"><%= foundThing.description %></textarea>
            </div>
            <button type="submit" class="btn btn-outline-primary w-100">Edit!</button>
        </form>
        <a href="/things">Go back</a>
    </div>
</div>

<% include ../partials/footer %>